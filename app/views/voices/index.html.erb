<div class="container">
  <header class="header clearfix">
    <a href="#"><%= image_tag 'twitter-3d-front-icon.png',class:"profile_img"%></a>
  </header>
</div>

<div class = "center">
  <h1>Voice一覧</h1>
    <div class = "main">
      <p><%= notice %></p>
  
      <table class = "summary">
        <% @voices.each do |voice| %>
          <tr>
            <td><%= voice.content %></td>
            <td><%= link_to '確認', voice_path(voice.id), class: 'btn btn-success'%></td>
            <td><%= link_to '編集', edit_voice_path(voice.id), data: { confirm: '編集しますか？' }, class: 'btn btn-success' %></td> 
            <td><%= link_to '削除', voice_path(voice.id), method: :delete ,data: { confirm: '削除しますか？' } , class: 'btn btn-success'%></td>
          </tr>
        <% end %>
       </table>
       <br>
       <%= link_to 'New tweet!', new_voice_path, class: 'btn btn-info'%>
    </div>
</div>


